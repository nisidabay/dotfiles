// Check if the input name is valid (only alphabetic characters)
#include <ctype.h>

int is_valid_name(const char *name) {

  // Ensure the input is not empty
  if (name[0] == '\0') {
    return 0;
  }

  for (int i = 0; name[i] != '\0'; i++) {
    if (!isalpha(name[i])) {
      return 0; // Invalid name
    }
  }
  return 1; // Valid name
}
