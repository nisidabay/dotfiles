{
	"name"             : "TaggingNotes",
	"short_name"       : "TGN",
	"version"          : "1.3.2",
	"manifest_version" : 2,
	"default_locale"   : "en",
	"applications":
	{
		"gecko":{"id": "jid1-APw0KzFn3P0kVw@jetpack"}
	},
	"description"      : "__MSG_DESCRIPTION__",
	"homepage_url"     : "http://far.whochan.com/",
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"icons"            :
	{
		"16"  : "icons/icon16.png",
		"32"  : "icons/icon32.png",
		"48"  : "icons/icon48.png",
		"64"  : "icons/icon64.png",
		"128" : "icons/icon96.png"
	},
	"background"       : 
	{
		"page"      :"index.html"
	},
	"options_ui"        :
	{
		"chrome_style": false,
		"open_in_tab" : true,
		"page"        : "options.html"
	},
	"sidebar_action"      :
	{
		"default_icon" : "buttons/sidebar.png",
		"default_title": "TaggingNotes",
		"default_panel": "sidebar.html"
	},
	"permissions":
	[
		"tabs",
		"contextMenus",
		"clipboardRead",
		"clipboardWrite",
		"http://*/",
		"https://*/"
	],
	"content_scripts":
	[
		{
			"run_at"	: "document_end",
			"all_frames": false,
			"matches"	: ["<all_urls>"],
			"js"		:
			[
				"lib/WHO.extension.client.js",
				"includes/usoCopyFromNotes.js"
			]
		}
	]
}
