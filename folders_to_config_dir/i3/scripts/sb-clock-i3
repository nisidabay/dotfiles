#!/bin/sh
TERMINAL="alacritty"

clock=$(date '+%I')

case "$clock" in
	"00") icon="🕛" ;;
	"01") icon="🕐" ;;
	"02") icon="🕑" ;;
	"03") icon="🕒" ;;
	"04") icon="🕓" ;;
	"05") icon="🕔" ;;
	"06") icon="🕕" ;;
	"07") icon="🕖" ;;
	"08") icon="🕗" ;;
	"09") icon="🕘" ;;
	"10") icon="🕙" ;;
	"11") icon="🕚" ;;
	"12") icon="🕛" ;;
esac

case $BLOCK_BUTTON in
    1)setid -f "$TERMINAL" -e calendr.py;;
	2|3) setid -f "$TERMINAL" -e calcurse ;;
esac

date "+%Y %b %d (%a) $icon%I:%M%p"
