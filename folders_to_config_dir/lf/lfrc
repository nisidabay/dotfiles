map W $setsid -f $TERMINAL >/dev/null 2>&1
map Y $printf "%s" "$fx" | xclip -selection clipboard
map ch chmod
map e open
map ee open
map md mkdir
map mf mkfile
map msf sudomkfile
map ob $setsid -f $BROWSER >/dev/null 2>&1
map p paste
map r rename
map sp scrachpad
map sw setwallpaper
map w open
map x cut
map y copy
map zp toggle_preview

# Movement
map gD cd ~/Downloads
map gb cd ~/bin
map gc cd ~/.config
map gd cd ~/Documents
map gh cd ~
map gl cd ~/.config/lf 
map gm cd ~/Movies
map gM cd ~/Music
map gp cd ~/Pictures
map op cd ~/proyectos_git
map gps cd ~/Pictures/screenshots
map gpw cd ~/Pictures/wallpapers
map gr cd ~/Downloads/Refactor
map gt fzf_jump 
map mm cd /media


map \;j cd ~
